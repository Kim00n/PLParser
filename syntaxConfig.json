{
  "tokens":[
    {
      "type": "num",
      "pattern": "([0-9]+[\\.]?[0-9]*)"
    },{
      "type": "op",
      "pattern":"([:=!+><]{1,2}|[\\-](?!\\-))"
    },{
      "type": "sep",
      "pattern":"(?:([\\()\\,])|([\\|]{2}))"
    },{
      "type": "word",
      "pattern": "(([\\.]?[a-zA-Z\\*][a-zA-Z0-9_#\\*\\%]*[\\.]?)*(\\\"[^\\\"]*\\\")?)"
    },{
      "type": "blk",
      "pattern":"([ \\n\\t\\f\\r]+)"
    },{
      "type":"strDef",
      "pattern":"(\\\"[^\\\"]*\\\")"
    },{
      "type":"str",
      "pattern":"((?<!['])['])(([^'])|(''))*(['](?!'))"
    },{
      "type":"comment",
      "pattern":"((--[^\\n]+)|(\\\/\\*((.|\\n)(?!\\*\\\/))*(.|\\n)(\\*\\\/)))"
    },{
      "type":"EOStatement",
      "pattern":"([;\\\/])"
    },{
      "type":"NoMatch",
      "pattern":"([^ ]*)"
    }
  ],
  "syntax":[
    {
      "name": "package_declaration",
      "pattern": "{,create}{,or}{,replace}{,body}(<package_name>{id,}){is}",
      "ignore":"{blk}"
    },{
      "name": "type_declaration",
      "pattern": "{type}(<=type_name>{id}){,is}(<type_specification>{id,!';'}*){,';'}"
    }
  ]
}